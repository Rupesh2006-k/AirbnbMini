<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Edit Listing</title>
    <link rel="stylesheet" href="/styleSheets/edit.css" />
  </head>
  <body>
      <%- include('../includes/navbar.ejs') %>
    <div class="container">
      <h1>Edit Your Listing</h1>
<form
  autocomplete="off"
  action="/listings/<%= listingEdit._id %>?_method=PUT"
  method="post"
  enctype="multipart/form-data"
  class="form"
>
  <label>Title</label>
  <input
    type="text"
    name="title"
    value="<%= listingEdit.title %>"
  />

  <label>Description</label>
  <textarea name="description"><%= listingEdit.description %></textarea>

  <!-- Existing Image Preview -->
  <label>Current Image</label>
  <img
    id="currentImage"
    src="<%= listingEdit.image.url %>"
    alt="Current Image"
    width="200"
    style="margin-bottom: 10px; border-radius: 6px;"
  />

  <label>Upload New Image (Optional)</label>
  <input type="file" name="image" id="imageInput" />

  <!-- New Preview -->
  <img
    id="newPreview"
    style="display: none; margin-top: 10px; width: 200px; border-radius: 6px;"
  />

  <label>Price</label>
  <input
    type="number"
    name="price"
    value="<%= listingEdit.price %>"
  />

  <label>Country</label>
  <input
    type="text"
    name="country"
    value="<%= listingEdit.country %>"
  />

  <label>Location</label>
  <input
    type="text"
    name="location"
    value="<%= listingEdit.location %>"
  />

  <button type="submit" class="btn">Save Changes</button>
</form>

<script>
  const imageInput = document.getElementById("imageInput");
  const newPreview = document.getElementById("newPreview");

  imageInput.addEventListener("change", (e) => {
    const file = e.target.files[0];

    if (file) {
      newPreview.src = URL.createObjectURL(file);
      newPreview.style.display = "block";
    }
  });
</script>
 <%- include('../includes/footer.ejs') %>
    </div>
  </body>
</html>
